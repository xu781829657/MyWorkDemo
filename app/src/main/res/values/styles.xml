<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">

    </style>


    <style name="BaseAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 窗口的背景颜色 -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 刻度尺!-->
    <style name="progress_horizontal_my">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_my
        </item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">@color/md_grey_900</item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">4dip</item>
    </style>

</resources>
